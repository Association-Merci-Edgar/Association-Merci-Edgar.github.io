%header
  .nav-top

    #top-nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .logo
            = link_to '/' do
              .logo-ed.logo-header.edi-ed-logo-horiz

          #main-nav
            %nav.nav-collapse.collapse.pull-right
              %ul#nav.nav
                /= showcase_menu_link("Accueil", locale_root_path, "index")
                %li{is_page_selected('/features.html')}= link_to "Logiciel de booking", "/software.html"
                %li{is_page_selected('/videos.html')}= link_to "Edgar TV", "/videos.html"
                %li{is_page_selected('/about.html')}= link_to "Association", "/association.html"
                %li= link_to "Blog", "http://blog.merciedgar.com", target: "_blank"

              #login-tab
                .login-btn.login-toggle
                  = link_to t("simple_form.labels.defaults.signin"), "http://login.merciedgar.com/users/sign_in"

  = yield_content :hero
